{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2021",
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "~": ["./src/index"],
      "~*": ["./src/*"]
    }
  },
  "include": [
    "./src/**/*.ts",
    "./src/types/*",
    "./src/**/types.d.ts"
  ]
}